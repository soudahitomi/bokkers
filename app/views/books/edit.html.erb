<% end %>

<%= form_with model: @book,method: :patch  do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <P>Body</P>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<P><%= link_to 'Show',book_path(@book.id) %></P>
